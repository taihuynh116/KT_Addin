<Window x:Class="Test1.InputForm"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Test1"
            SizeToContent="WidthAndHeight" Topmost="True">
    <StackPanel Margin="10">
        <StackPanel  Orientation="Horizontal">
            <Label Content="Prefix:" VerticalAlignment="Center"/>
            <TextBox Width="50" Text="{Binding Prefix}" VerticalAlignment="Center"/>
            <Label Content="Direction:" Margin="15 0 0 0" VerticalAlignment="Center"/>
            <TextBox Width="50" Text="{Binding Direction}" VerticalAlignment="Center"/>
            <Label Content="Name:"  Margin="15 0 0 0" VerticalAlignment="Center"/>
            <TextBox Width="50" Text="{Binding Name}" VerticalAlignment="Center"/>
        </StackPanel>
        <StackPanel Margin="0 10 0 0" Orientation="Horizontal">
            <Label x:Name="lblValue"/>
            <Button Margin="250 0 0 0" Content="Update" Click="Button_Click"/>
        </StackPanel>
    </StackPanel>
</Window>
